{
  "name": "@fr0ster/mcp-abap-adt",
  "version": "1.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "tsc -p tsconfig.json",
    "start": "node ./dist/index.js",
    "start:http": "node ./dist/index.js --transport streamable-http",
    "start:sse": "node ./dist/index.js --transport sse",
    "dev": "npx @modelcontextprotocol/inspector node ./dist/index.js",
    "dev:http": "node ./tools/dev-http.js",
    "dev:sse": "npx @modelcontextprotocol/inspector node ./dist/index.js --transport sse",
    "auth": "node ./tools/sap-abap-auth.js auth",
    "clean": "make clean",
    "docs:tools": "node ./tools/generate-tools-docs.js"
  },
  "keywords": [
    "abap",
    "sap",
    "adt",
    "mcp",
    "model-context-protocol"
  ],
  "author": "Oleksii Kyslytsia <oleksij.kyslytsja@gmail.com>",
  "description": "Embedded ABAP ADT MCP server tailored for the Cloud LLM Hub stack",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fr0ster/mcp-abap-adt.git"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "commander": "^14.0.2",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jest": "^30.0.5",
    "open": "^10.2.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "@mcp-abap-adt/connection": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "axios": "^1.11.0",
    "fast-xml-parser": "^5.2.5",
    "xml-js": "^1.6.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true
}
